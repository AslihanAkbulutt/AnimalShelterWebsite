@page
@model RegisterModel
@inject LanguageService language
<link href="~/css/login.css" rel="stylesheet" />



<form style="background-color:rgb(26, 30 ,35);" class="login-form" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h2 style="color:white">@language.GetKey("registertitle")</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-input-material">
        <label asp-for="Input.Name">@language.GetKey("registername")</label>
        <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="form-input-material">
        <label asp-for="Input.Lastname">@language.GetKey("registerlastname")</label>
        <input asp-for="Input.Lastname" class="form-control" autocomplete="lastname" aria-required="true" />
        <span asp-validation-for="Input.Lastname" class="text-danger"></span>
    </div>
    <div class="form-input-material">
        <label asp-for="Input.Email">@language.GetKey("registermail")</label>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-input-material">
        <label asp-for="Input.Password">@language.GetKey("registerpassword")</label>
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-input-material">
        <label asp-for="Input.ConfirmPassword">@language.GetKey("registercpassword")</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button style="background-color:white; color:black;" id="registerSubmit" type="submit" class=" btn btn-primary">@language.GetKey("registerbutton")</button>
</form>
      

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
