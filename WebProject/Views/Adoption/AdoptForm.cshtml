@model WebProject.Models.Application
@inject LanguageService language
@{
    ViewData["Title"] = "Application";
}
<link href="~/css/adopt.css" rel="stylesheet" />

<body> 
    <form  class="login-form" asp-action="AdoptForm" asp-controller="Adoption" method="post">
        <div class="w3-top">
            <div class="w3-white w3-xlarge" style="max-width:1535px; margin-left:0px;">
                <div class="w3-button w3-padding-16 w3-left"></div>
                <div class="w3-right w3-padding-16"></div>
                <div class="w3-center w3-padding-16" style="padding-top:10px">@language.GetKey("formtitle")</div>
            </div>
        </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="w3-row ">
        <div style=" padding-right:20px" class="w3-col m6">
            <div class="form-group">
                <label asp-for="Name" class="control-label">@language.GetKey("formname")</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label">@language.GetKey("formlastname")</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label">@language.GetKey("formusername")</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div style=" padding-left:20px" class="w3-col m6">
            <div class="form-group">
                <label asp-for="Adress" class="control-label">@language.GetKey("formadress")</label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label">@language.GetKey("formphone")</label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Explanation" class="control-label">@language.GetKey("formexp")</label>
                <input asp-for="Explanation" class="form-control" />
                <span asp-validation-for="Explanation" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        
        <input type="submit" value=@language.GetKey("formbutton") class="btn btn-primary" />
        <a asp-action="Index">@language.GetKey("formback")</a>
    </div>
</form>
</body>

 

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }