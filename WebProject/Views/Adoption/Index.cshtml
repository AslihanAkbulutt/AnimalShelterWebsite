@model IEnumerable<WebProject.Models.Animal>
@{
    ViewData["Title"] = "Index";
}

<head>
    <style>
        body, h1, h2, h3, h4, h5, h6 {
            font-family: 'Times New Roman', Times, serif;
        }

        .btn {
            width: 270px;
            background-color: black;
            color: white;
        }

        .w3-bar-block .w3-bar-item {
            padding: 20px
        }

    </style>
</head>
<body>
    <div class="w3-top">
        <div class="w3-white w3-large" style="max-width:1535px">
            <div class="w3-button w3-padding-16 w3-left"></div>
            <div style="margin-right:40px" class="w3-right w3-padding-16">
                
                <div class="w3-dropdown-hover">
                    <button class="w3-button">Categories</button>
                    <div class="w3-dropdown-content w3-bar-block w3-card-4">
                        <a asp-area="" asp-controller="Adoption" asp-action="Index" asp-route-id="0" class="w3-bar-item w3-button">All</a>
                        <a asp-area="" asp-controller="Adoption" asp-action="Cats"  class="w3-bar-item w3-button">Cats</a>
                        <a asp-area="" asp-controller="Adoption" asp-action="Index" asp-route-id="2" class="w3-bar-item w3-button">Dogs</a>
                    </div>
                </div>
                  
            </div>
            <div class="w3-center w3-xlarge w3-padding-16" style="padding-top:10px">Adoption Ads</div>
        </div>
    </div>

        @foreach (var item in Model)
        {

        <div style="background-color:lightgrey; border-radius:5px; padding:5px; margin:100px auto auto 65px;width:300px; height:450px" class="w3-quarter">
            <img src= @item.Image alt="animal" style="width:100%">
               <h3>@item.Breed</h3>
                <p>@item.Age Years Old<br />@item.Info</p>
            <div style="background-color:black; border-radius:5px; margin:10px,10px,10px,10px"><a style="margin-left:110px; font-size:25px;color:white;" asp-action="AdoptForm" asp-route-id="@item.Id">Adopt</a></div>
            </div>
        }

</body>
