@model IEnumerable<WebProject.Models.Animal>
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body, h1, h2, h3, h4, h5, h6 {
            font-family: 'Times New Roman', Times, serif;
        }

        .btn {
            width: 270px;
            background-color: black;
            color: white;
        }

        .w3-bar-block .w3-bar-item {
            padding: 20px
        }

    </style>
</head>
<body>
    <!-- Top menu -->
    <div class="w3-top">
        <div class="w3-white w3-xlarge" style="max-width:1535px">
            <div class="w3-button w3-padding-16 w3-left"></div>
            <div class="w3-right w3-padding-16"></div>
            <div class="w3-center w3-padding-16" style="padding-top:10px">Adoption Ads</div>
        </div>
    </div>


        @foreach (var item in Model)
        {

        <div style="background-color:lightgrey; border-radius:5px; padding:5px; margin:100px auto auto 65px;width:300px; height:450px" class="w3-quarter">
            <img src= @item.Image alt="animal" style="width:100%">
               <h3>@item.Breed</h3>
                <p>@item.Age Years Old<br />@item.Info</p>
                <button style="margin-left:8px" type="submit" class="btn">Adopt</button>
            </div>
        }

</body>
