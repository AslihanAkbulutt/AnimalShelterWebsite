@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserDetails> SignInManager
@inject UserManager<UserDetails> UserManager
@inject LanguageService language
<link rel="stylesheet" href="~/css/menu.css" />

@if (SignInManager.IsSignedIn(User))
{
    <li class="menu-nav-item">
        <a  class="menu-nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
    </li>
    <li class="menu-nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "About", new { area = "" })">
            <button type="submit" class="menu-nav-link btn menu-nav-item btn-link ">@language.GetKey("logout")</button>
        </form>
    </li>
}
else
{
    <li class="menu-nav-item">
        <a class="menu-nav-link " asp-area="Identity" asp-page="/Account/Register">@language.GetKey("register")</a>
    </li>
    <li class="menu-nav-item">
        <a class="menu-nav-link " asp-area="Identity" asp-page="/Account/Login">@language.GetKey("login")</a>
    </li>
}
