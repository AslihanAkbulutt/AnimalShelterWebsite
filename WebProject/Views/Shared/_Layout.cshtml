@inject LanguageService language
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />    
    <link rel="stylesheet" href="~/WebProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu.css" />
</head>

<input type="checkbox" id="burger-toggle">
<label for="burger-toggle" class="burger-menu">
    <div class="line"></div>
    <div class="line"></div>
    <div class="line"></div>
</label>

<div class="menu">
    <div class="menu-inner">
        <ul class="menu-nav">
            <li class="menu-nav-item">
                <a class="menu-nav-link" asp-area="" asp-controller="About" asp-action="Index">
                    <span>
                        <div>@language.GetKey("home")</div>
                    </span>
                </a>
            </li>
            <li class="menu-nav-item">
                <a class="menu-nav-link" asp-area="" asp-controller="Adoption" asp-action="Index">
                    <span>
                        <div>@language.GetKey("adoption")</div>
                    </span>
                </a>
            </li>
            @if(User.Identity.IsAuthenticated)
            {
                if(User.IsInRole("Admin"))
                {
                    <li class="menu-nav-item">
                        <div style="background-color: rgb(26 30 35); " class="w3-dropdown-hover">
                            <button class="w3-button menu-nav-link">Admin</button>
                            <div class="w3-dropdown-content w3-bar-block w3-card-4">
                                <a asp-area="" asp-controller="Admin" asp-action="EditUsers" class="w3-bar-item w3-button">@language.GetKey("users")</a>
                                <a asp-area="" asp-controller="Admin" asp-action="EditAnimals" class="w3-bar-item w3-button">@language.GetKey("animals")</a>
                                <a asp-area="" asp-controller="Message" asp-action="EditMessages" class="w3-bar-item w3-button">@language.GetKey("messages")</a>
                            </div>
                        </div>
                    </li>
                }
            }
            
            <partial name="_LoginPartial" />

            <li class="menu-nav-item">
                <div style="background-color: rgb(26 30 35); " class="w3-dropdown-hover">
                    <button class="w3-button menu-nav-link"><i class="fa fa-globe" style="color:white"></i></button>
                    <div class="w3-dropdown-content w3-bar-block w3-card-4">
                        <a asp-area="" asp-controller="About" asp-action="ChangeLanguage" asp-route-culture="en-US" class="w3-bar-item w3-button">English</a>
                        <a asp-area="" asp-controller="About" asp-action="ChangeLanguage" asp-route-culture="tr-TR" class="w3-bar-item w3-button">Turkish</a>
                    </div>
                </div>
            </li>
        </ul>
        
        <div class="gallery">
            <div class="title">
                <p>Photo Gallery</p>
            </div>
            <div class="images">
                <a class="image-link">
                    <div class="image" data-label="Cats"><img src="~/img/cat2.jpg" alt=""></div>
                </a>
                <a class="image-link">
                    <div class="image" data-label="Dogs"><img src="~/img/dog.jpg" alt=""></div>
                </a>
                <a class="image-link">
                    <div class="image" data-label="Dogs"><img src="~/img/dog2.jpg" alt=""></div>
                </a>
                <a class="image-link">
                    <div class="image" data-label="Cats"><img src="~/img/cats/siyam.jpg" alt=""></div>
                </a>
            </div>
        </div>
    </div>
</div>

<div>@RenderBody()</div>

@await RenderSectionAsync("Scripts", required: false)

