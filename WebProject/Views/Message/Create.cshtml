@model WebProject.Models.Message
@inject LanguageService language

@{
    ViewData["Title"] = "Create";
}
<link href="~/css/admin.css" rel="stylesheet" />


<form class="login-form" asp-action="Create" asp-controller="Message" method="post">
    <h1 style="color:white">@language.GetKey("Mcreatetitle")</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">@language.GetKey("messagename")</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mail" class="control-label">@language.GetKey("messagemail")</label>
        <input asp-for="Mail" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
            
    <div class="form-group">
        <label asp-for="Messages" class="control-label">@language.GetKey("messagemessage")</label>
        <input asp-for="Messages" class="form-control" />
        <span asp-validation-for="Messages" class="text-danger"></span>
    </div>
            
    <div class="form-group">
        <input type="submit" value=@language.GetKey("messagesave") class="btn btn-primary" />
        <a asp-action="EditMessages">@language.GetKey("messageback")</a>
    </div>
</form>
  

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }